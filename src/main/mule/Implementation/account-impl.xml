			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
    Id:payload.items.id[0],
    status:if(payload.successful== true) " Id deleted successfully" else
    "delete unsuccessful"
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="After Delete Account" doc:id="4eca9cc2-8103-45dd-8bf3-08f73743bc52" message="After Delete Account::#[payload]"/>
